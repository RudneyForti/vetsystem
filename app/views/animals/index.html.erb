<%= javascript_include_tag "clientes" %>
<%= stylesheet_link_tag "clientes" %>
<p id="notice"><%= notice %></p>

<h1>Animais</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cliente</th>
      <th>Espécie</th>
      <th>Raça</th>
      <th>Data de Nascimento</th>
      <th>Ações</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @animals.each do |animal| %>
       
      <!--<tr data-link = "<%= link_to 'Mostrar', animal %>">-->
      <tr>
       <td><%= animal.nome %></td>
        <td><%= animal.cliente.nome %></td>
        <td><%= animal.especie %></td>
        <td><%= animal.raca %></td>
        <td><%= animal.nascimento.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Mostrar', animal %></td>
        <td><%= link_to 'Editar', edit_animal_path(animal) %></td>
        <td><%= link_to 'Deletar', animal, method: :delete, data: { confirm: 'Tem certeza que deseja deletar ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar animal', new_animal_path %>
