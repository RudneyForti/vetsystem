<p id="notice"><%= notice %></p>

<h1>Animals</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cliente</th>
      <th>Especie</th>
      <th>Raca</th>
      <th>Nascimento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.nome %></td>
        <td><%= animal.cliente.nome %></td>
        <td><%= animal.especie %></td>
        <td><%= animal.raca %></td>
        <td><%= animal.nascimento %></td>
        <td><%= link_to 'Mostrar', animal %></td>
        <td><%= link_to 'Editar', edit_animal_path(animal) %></td>
        <td><%= link_to 'Deletar', animal, method: :delete, data: { confirm: 'Tem certeza que deseja deletar ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

