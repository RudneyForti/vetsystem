<%= stylesheet_link_tag "clientes" %>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

<p id="notice"><%= notice %></p>

<div class= "main">
  <div id="alinha-content">
    <h1>Animais</h1>
    
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Cliente</th>
          <th>Espécie</th>
          <th>Raça</th>
          <th>Data de Nascimento</th>
          <th>Ações</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        
        <% @animals.each do |animal| %>
           
          
          <tr data-link = '<%= link_to 'Mostrar', animal %>'>
           <td><%= animal.nome %></td>
            <td><%= animal.cliente.nome %></td>
            <td><%= animal.especie %></td>
            <td><%= animal.raca %></td>
            <td><%= animal.nascimento.strftime("%d/%m/%Y") %></td>
            <td><%= link_to animal do %>
              <i class="fas fa-eye"></i>
               <%end%>
            </td>
            <td><%= link_to edit_animal_path(animal) do %>
                <i class="fas fa-edit"></i>
              <% end %>
            </td>
            <td><%= link_to animal, method: :delete, data: { confirm: 'Tem certeza que deseja deletar ?' } do%>
               <i class="fas fa-trash-alt"></i>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    

    <br>
  
    
    <%= link_to 'Adicionar animal', new_animal_path, class: "myButton" %>
    </div>
</div>

