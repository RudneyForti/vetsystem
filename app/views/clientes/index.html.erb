<%= stylesheet_link_tag "clientes" %>
<%= javascript_include_tag "clientes" %>

<p id="notice"><%= notice %></p>
 <nav>
      <ul>
        <li><%= link_to 'Clientes', clientes_path %></li>
        <li><%= link_to 'Animais', animals_path %></li>
        <li><%= link_to 'Atendimentos', atendimentos_path %></li>
    </ul>
  </nav>
  
<h1>Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Endereço</th>
      <th>Telefone</th>
      <th>Email</th>
      <th>Ações</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.cpf %></td>
        <td><%= cliente.endereco %></td>
        <td><%= cliente.telefone %></td>
        <td><%= cliente.email %></td>
        <td><%= link_to 'Show', cliente %></td>
        <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'Novo Cliente', new_cliente_path, class: "myButton" %>
