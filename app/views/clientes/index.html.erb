
<%= javascript_include_tag "clientes" %>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">



<%= render 'layouts/navigation' %>
<div class="main">  
<div id="alinha-content">
    <h1>Clientes</h1>
    
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Cpf</th>
          <th>Endereço</th>
          <th>Telefone</th>
          <th>Email</th>
          <th>Ações</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @clientes.each do |cliente| %>
          <tr>
            <td><%= cliente.nome %></td>
            <td><%= cliente.cpf %></td>
            <td><%= cliente.endereco %></td>
            <td><%= cliente.telefone %></td>
            <td><%= cliente.email %></td>
            
            <td><%= link_to cliente do %>
                 <i class="fas fa-eye"></i>
                <% end %>
            </td>
            
            <td><%= link_to edit_cliente_path(cliente) do %>
             <i class="fas fa-edit">
              </i>
            <% end %>
            </td>
            
            <td><%= link_to cliente, method: :delete, data: { confirm: 'Tem certeza que deseja deletar?' } do %>
               <i class="fas fa-trash-alt"></i>
            <% end %>
            </td>
            
          </tr>
        </div>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'Novo Cliente', new_cliente_path, class: "myButton" %>
    
    
      <div class="paginacao">
        <%= paginate @clientes, class: "pagination" %>
      </div>
      
  </div>
</div>