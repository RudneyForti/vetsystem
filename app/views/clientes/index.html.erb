<%= stylesheet_link_tag "clientes" %>
<%= javascript_include_tag "clientes" %>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">


<p id="notice"><%= notice %></p>
 <nav>
      <ul>
        <li><%= link_to 'Clientes', clientes_path %></li>
        <li><%= link_to 'Animais', animals_path %></li>
        <li><%= link_to 'Atendimentos', atendimentos_path %></li>
    </ul>
  </nav>
<div id="alinha-content">  
  <h1>Clientes</h1>
  
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Cpf</th>
        <th>Endereço</th>
        <th>Telefone</th>
        <th>Email</th>
        <th>Ações</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @clientes.each do |cliente| %>
        <tr>
          <td><%= cliente.nome %></td>
          <td><%= cliente.cpf %></td>
          <td><%= cliente.endereco %></td>
          <td><%= cliente.telefone %></td>
          <td><%= cliente.email %></td>
          
          <td><%= link_to cliente do %>
               <i class="fas fa-eye"></i>
              <% end %>
          </td>
          
          <td><%= link_to edit_cliente_path(cliente) do %>
           <i class="fas fa-edit">
            </i>
          <% end %>
          </td>
          
          <td><%= link_to cliente, method: :delete, data: { confirm: 'Are you sure?' } do %>
             <i class="fas fa-trash-alt"></i>
          <% end %>
          </td>
          
        </tr>
      </div>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'Novo Cliente', new_cliente_path, class: "myButton" %>
</div>