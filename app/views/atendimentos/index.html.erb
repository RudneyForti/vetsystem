
<p id="notice"><%= notice %></p>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

<div class="main">
  <div id="alinha-content">
    <h1>Atendimentos</h1>
  
  <table>
    <thead>
      <tr>
        <th>Animal</th>
        <th>Observação</th>
        <th>Data</th>
        <th>Ações</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @atendimentos.each do |atendimento| %>
        <tr>
        
          <td><%= atendimento.Animal.nome %></td>
          <td><%= atendimento.observacao %></td>
          <td><%= atendimento.data.strftime("%d/%m/%Y") %></td>
          
          <td><%= link_to atendimento do%>
             <i class="fas fa-eye"></i>
             <%end%>
          </td>
          
          <td><%= link_to edit_atendimento_path(atendimento) do %>
            <i class="fas fa-edit">
              </i>
            <% end %>
          </td>
          
          <td><%= link_to atendimento, method: :delete, data: { confirm: 'Tem certeza que deseja deletar?' } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'Novo Atendimento', new_atendimento_path, class:"myButton" %>
  </div>
</div>