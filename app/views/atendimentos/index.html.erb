<%= stylesheet_link_tag "clientes" %>
<p id="notice"><%= notice %></p>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

 <nav>
      <ul>
        <li><%= link_to 'Clientes', clientes_path %></li>
        <li><%= link_to 'Animais', animals_path %></li>
        <li><%= link_to 'Atendimentos', atendimentos_path %></li>
    </ul>
  </nav>
  
<div id="alinha-content">
<h1>Atendimentos</h1>

<table>
  <thead>
    <tr>
      <th>Animal</th>
      <th>Observação</th>
      <th>Data</th>
      <th>Ações</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atendimentos.each do |atendimento| %>
      <tr>
      
        <td><%= atendimento.Animal %></td>
        <td><%= atendimento.observacao %></td>
        <td><%= atendimento.data %></td>
        
        <td><%= link_to atendimento do%>
           <i class="fas fa-eye"></i>
           <%end%>
        </td>
        
        <td><%= link_to edit_atendimento_path(atendimento) do %>
          <i class="fas fa-edit">
            </i>
          <% end %>
        </td>
        
        <td><%= link_to atendimento, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Atendimento', new_atendimento_path, class:"myButton" %>
</div>