<%= stylesheet_link_tag "clientes" %>
<p id="notice"><%= notice %></p>

 <nav>
      <ul>
        <li><%= link_to 'Clientes', clientes_path %></li>
        <li><%= link_to 'Animais', animals_path %></li>
        <li><%= link_to 'Atendimentos', atendimentos_path %></li>
    </ul>
  </nav>
<h1>Atendimentos</h1>

<table>
  <thead>
    <tr>
      <th>Animal</th>
      <th>Observação</th>
      <th>Data</th>
      <th>Ações</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atendimentos.each do |atendimento| %>
      <tr>
        <td><%= atendimento.Animal %></td>
        <td><%= atendimento.observacao %></td>
        <td><%= atendimento.data %></td>
        <td><%= link_to 'Show', atendimento %></td>
        <td><%= link_to 'Edit', edit_atendimento_path(atendimento) %></td>
        <td><%= link_to 'Destroy', atendimento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Atendimento', new_atendimento_path, class:"myButton" %>
